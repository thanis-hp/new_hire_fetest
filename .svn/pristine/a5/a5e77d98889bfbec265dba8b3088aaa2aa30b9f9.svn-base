var tempTreeStore = Ext.create('Ext.data.TreeStore', {
    root: {
        expanded: true,
        children: [
            { text: "ALB Profile Management", id:'profileManagement', leaf: true },
            { text: "User Profile Management", id:'userManagement', leaf:true}

        ]
    }
});


var treePanel = Ext.create('Ext.tree.Panel', {
    id:'tree-panel',
    title:'User Menu',
    region:'west',
    split:true,
    height:300,
    width:'20%',
    minWidth:100,
    rootVisible:false,
    autoScroll:true,
    collapsible:true,
    store:tempTreeStore,
    fbar:[
        {
            text:'Log Out',
            width:120,
            handler:function () {
                Ext.MessageBox.show({
                    title:'Logout from TeMIP ALB GUI',
                    msg:'Are you sure?',
                    buttons:Ext.MessageBox.OKCANCEL,
                    fn:function (btn) {
                        if (btn == 'ok') {
                            window.location = "logout2.htm";
                        }
                    },
                    animateTarget:'tree-panel',
                    icon:Ext.MessageBox.QUESTION
                });


            }
        }
    ]
});

treePanel.getSelectionModel().on('select', function (selModel, record) {
    treePanel.getSelectionModel().deselectAll(true);
    if (record.get('leaf')) {
        Ext.getCmp('content-panel').layout.setActiveItem(record.get('id') + '-panel');
    }
});
//TreePanel

var startPanel = function startPanel(){
    //contentPanel
    var layoutItems = [];
    Ext.Object.each(getLayout(), function(name, example) {
        layoutItems.push(example);
    });

    var contentPanel = {
        id: 'content-panel',
        region: 'center', // this is what makes this panel into a region within the containing layout
        layout: 'card',
        margins: '0 2 2 1',
        activeItem: 0,
        border: false,
        items: layoutItems
//        items: grid
    };
    //contentPanel

    var viewport = Ext.create('Ext.Viewport', {
        layout: {
            type: 'border',
            padding: 5
        },
        title: "TeMIP ALB GUI v1",
        defaults: {
            split: true
        },
        items: [treePanel, contentPanel],
        renderTo: Ext.getBody()
    });
};














